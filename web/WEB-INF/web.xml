<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>initial</servlet-name>
        <servlet-class>app.servlets.InitialServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>initial</servlet-name>
        <url-pattern>/initial</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>university</servlet-name>
        <servlet-class>app.servlets.UniversityServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>university</servlet-name>
        <url-pattern>/university_search</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>profile</servlet-name>
        <servlet-class>app.servlets.ProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profile_search</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>author</servlet-name>
        <servlet-class>app.servlets.AuthorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>author</servlet-name>
        <url-pattern>/author_search</url-pattern>
    </servlet-mapping>
    
</web-app>